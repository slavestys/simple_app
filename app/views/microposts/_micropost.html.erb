<tr>
  <td class="micropost">
    <span class="content"><%= micropost.content %></span>
    <span class="timestamp">
       <%=I18n.t(:t_posted)%> <%= time_ago_in_words(micropost.created_at)%> <%=I18n.t(:t_ago)%>.
    </span>
  </td>
   <% user = micropost.user rescue User.find(micropost.user_id) %>
<% if current_user?(user) %>
  <td>
    <%= link_to I18n.t(:t_delete), micropost, :method => :delete,
                                     :confirm => I18n.t(:t_confurm_delete),
                                     :title => micropost.content %>
  </td>
  <% end %>
</tr>

