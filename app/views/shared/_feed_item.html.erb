<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span><br>
    <span class="content"><%= feed_item.content %></span>
    <span class="timestamp">
      <%= I18n.t(:t_posted)%> <%= time_ago_in_words(feed_item.created_at) %> <%= I18n.t(:t_ago)%>.
    </span>
  </td>
  <% if current_user?(feed_item.user) %>
  <td class="td_center">
    <%= link_to I18n.t(:t_delete), feed_item, :method => :delete,
                                     :confirm => I18n.t(:t_confurm_delete),
                                     :title => feed_item.content %>
  </td>
  <% end %>
</tr>
