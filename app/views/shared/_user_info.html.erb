<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.name %>
    </span><br>
    <span class="microposts"><%=current_user.microposts.count%>
    <% if I18n.locale==:ru %>
    		<%= Russian::pluralize(current_user.microposts.count,"мысль","мысли","мыслей") %>
    	<% else %>
    		<%= pluralize(current_user.microposts.count, I18n.t(:t_micropost)) %>
    	<% end %>      
    </span>
  </a>
</div>
