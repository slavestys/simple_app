<h1><%=I18n.t(:t_settings) %></h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name, I18n.t(:t_username_caption) %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email,I18n.t(:t_user_email_caption) %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password,I18n.t(:t_user_password_caption) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, I18n.t(:t_user_confirmation_caption) %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit I18n.t(:t_update) %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails"><%=I18n.t(:t_change) %></a>
</div>
