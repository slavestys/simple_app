<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <span><%= @user.name %></span>
      </h1>
      <%= render 'follow_form' if signed_in? %>
        <% unless @user.microposts.empty? %>
        <table class="microposts" summary="User microposts">
          <%= render @microposts %>
        </table>
        <%= will_paginate @microposts %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong><%= I18n.t(:t_username_caption) %></strong> <%= @user.name %><br />
      <strong><%= I18n.t(:t_user_url) %></strong>  <%= link_to user_path(@user), @user %><br>
      <strong><%= I18n.t(:t_user_post_count) %></strong> <%= @user.microposts.count %>
      <%= render 'shared/stats' %>
    </td>
  </tr> 
</table>
